<%- include("partials/header.ejs") %>

<section class="book-form book-list">
    <h2>Edit Book</h2>
    <form action="/edit" method="post">
        <input type="hidden" name="id" value="<%= book.id %>">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= book.title %>" required>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="<%= book.author %>" required>

        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>" required>

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" step="0.1" value="<%= book.rating %>" required>

        <label for="review">Review:</label>
        <textarea id="review" name="review" required><%= book.review %></textarea>

        <label for="date_read">Date Read:</label>
        <input type="date" id="date_read" name="date_read" value="<%= book.date_read %>" required><br>

        <button type="submit">Update Book</button>
    </form>
</section>

<%- include("partials/footer.ejs") %>
